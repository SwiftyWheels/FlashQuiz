<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="631.0" maxWidth="600.0" minHeight="631.0" minWidth="600.0" prefHeight="631.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: rgb(71, 71, 73);" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox fx:id="vBoxCardQuestion" alignment="CENTER" prefHeight="304.0" prefWidth="560.0" style="-fx-background-color: rgb(47, 47, 49);">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <children>
                <Label fx:id="lblCardQuestion" alignment="CENTER" contentDisplay="CENTER" prefHeight="254.0" prefWidth="587.0" text="Question Text" textFill="WHITE" textOverrun="CLIP" wrapText="true" />
            </children>
        </VBox>
        <VBox fx:id="vBoxCardAnswer" alignment="CENTER" prefHeight="318.0" prefWidth="600.0" style="-fx-background-color: rgb(47, 47, 49);">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <children>
                <Label fx:id="lblCardAnswer" alignment="CENTER" contentDisplay="CENTER" prefHeight="386.0" prefWidth="834.0" style="visibility: false;" text="Question Answer" textFill="WHITE" wrapText="true" />
            </children>
        </VBox>
        <HBox fx:id="onBtnGoBackAction" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: rgb(47, 47, 49);">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <children>
                <Button fx:id="btnGoBack" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBtnGoBackAction" style="-fx-background-color: rgb(89, 89, 89); -fx-text-fill: rgb(255, 255, 255);" text="Close Deck">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnShowAnswer" contentDisplay="CENTER" layoutX="260.0" layoutY="20.0" mnemonicParsing="false" onAction="#onBtnShowAnswerAction" style="-fx-background-color: rgb(89, 89, 89); -fx-text-fill: rgb(255, 255, 255);" text="Show Answer">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnNextCard" contentDisplay="CENTER" layoutX="287.0" layoutY="20.0" mnemonicParsing="false" onAction="#onBtnNextCardAction" style="-fx-background-color: rgb(89, 89, 89); -fx-text-fill: rgb(255, 255, 255);" text="Next Card" />
            <Button fx:id="btnRemoveCard" contentDisplay="CENTER" layoutX="324.0" layoutY="19.0" mnemonicParsing="false" onAction="#onBtnRemoveCard" style="-fx-background-color: rgb(89, 89, 89); -fx-text-fill: rgb(255, 255, 255);" text="Remove Card" />
            <Label id="lblCardIndex" fx:id="lblCardIndex" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="36.0" style="-fx-text-fill: rgb(255, 255, 255);" text="0/0" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
