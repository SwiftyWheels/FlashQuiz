                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Remove Decks" textAlignment="RIGHT" textFill="WHITE">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="79.0" prefWidth="580.0" spacing="10.0" style="-fx-background-color: rgb(47, 47, 49);">
                    <children>
                        <Label prefHeight="45.0" prefWidth="79.0" text="Deck:" textFill="WHITE">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <padding>
